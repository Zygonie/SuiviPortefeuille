@model IEnumerable<SuiviPortefeuilleRBC.Models.Stock>

<table class="table">
    <tr>
        <th/>
        <th />
        <th>@Html.DisplayNameFor(model => model.Description.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Description.Code)</th>
        <th>@Html.DisplayNameFor(model => model.NumberOfShares)</th>
        <th>@Html.DisplayNameFor(model => model.UnitaryPrice)</th>
        <th>@Html.DisplayNameFor(model => model.Description.LastPrice)</th>
        <th>@Html.DisplayNameFor(model => model.Description.ChangePercent)</th>
        <th>@Html.DisplayNameFor(model => model.PerformanceCash)</th>
        <th>@Html.DisplayNameFor(model => model.PerformancePercent)</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                <button class="btn btn-success" data-toggle="modal" data-target="#newOperation"
                        value="buysell" data-url="@Url.Action("BuySellStock", "ManagePortfolio",
                        new
                        {
                            stockId = item.StockId,
                            sens = SuiviPortefeuilleRBC.Models.OperationOnStock.Buy
                        })">
                    Buy
                </button>
            </td>
            <td>
                <button class="btn btn-danger" data-toggle="modal" data-target="#newOperation"
                        value="buysell" data-url="@Url.Action("BuySellStock", "ManagePortfolio",
                        new
                        {
                            stockId = item.StockId,
                            sens = SuiviPortefeuilleRBC.Models.OperationOnStock.Sell
                        })">
                    Sell
                </button>
            </td>
            <td>@Html.DisplayFor(modelItem => item.Description.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Description.Code)</td>
            <td>@Html.DisplayFor(modelItem => item.NumberOfShares)</td>
            <td>@Html.DisplayFor(modelItem => item.UnitaryPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.Description.LastPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.Description.ChangePercent)</td>
            <td>@Html.DisplayFor(modelItem => item.PerformanceCash)</td>
            <td>@Html.DisplayFor(modelItem => item.PerformancePercent)</td>
        </tr>
    }
</table>
