@model IEnumerable<SuiviPortefeuilleRBC.Models.Stock>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfShares)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvestedValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitaryPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PerformanceCash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PerformancePercent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfShares)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvestedValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitaryPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PerformanceCash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PerformancePercent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StockId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StockId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StockId })
        </td>
    </tr>
}

</table>
